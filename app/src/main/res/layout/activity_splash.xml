<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="75dp"
    tools:context=".presentation.activities.splash.SplashActivity"
    android:background="@color/etechBlack"
    >

    <com.mikhaellopez.circularfillableloaders.CircularFillableLoaders
        android:id="@+id/circularFillableSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_splash"
        app:cfl_border="true"
        app:cfl_border_width="@dimen/cicrular_border_width"
        app:cfl_progress="0"
        app:cfl_wave_amplitude="0.06"
        app:cfl_wave_color="@color/etechBlue"
        android:layout_centerInParent="true"
        />


</RelativeLayout>
