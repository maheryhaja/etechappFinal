<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/little_margin">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




            <include
                layout="@layout/itemview_list_employe_inside"
                />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_not_synchronized"
            android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:id="@+id/imgTempLoading"
            />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_temp_create"
            android:id="@+id/imgTempOperationType"
            android:layout_toLeftOf="@+id/imgTempLoading"
            android:layout_marginTop="32dp"
            android:layout_marginRight="3dp" />


    </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>