<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/etechBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/etechBlueDark</item>
    </style>

    <style name="edt_general_style">
        <item name="android:padding">@dimen/padding_for_general_edt</item>
        <item name="android:color">@color/etechBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/etechBlue</item>
        <item name="android:textSize">@dimen/little_font_size</item>
    </style>

    <style name="edt_general_light">
        <item name="android:padding">@dimen/padding_for_general_edt</item>
        <item name="android:color">@color/etechBlue</item>
        <item name="android:textSize">@dimen/little_font_size</item>
    </style>

    <style name="general_typed_button">
        <item name="android:padding">@dimen/general_padding</item>
        <item name="android:layout_margin">@dimen/general_margin</item>
    </style>

    <style name="general_float_edit">
        <item name="android:textColor">@color/etechBlue</item>
    </style>

    <style name="image_button_dimens">
        <item name="android:width">@dimen/fab_button_size</item>
        <item name="android:height">@dimen/fab_button_size</item>
    </style>

</resources>
